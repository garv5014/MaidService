<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaidService.Views.CustomerProfile"
             xmlns:sfavatar="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:customComp ="clr-namespace:MaidService.CustomComponents"
             Title="CustomerProfile">
    <VerticalStackLayout>
        <Grid RowDefinitions="*,*,*"
              ColumnDefinitions="*,*"
              Padding="0,10,0,0">
            <sfavatar:SfAvatarView Grid.RowSpan="3"
                                   Grid.Column="0"
                                   Grid.Row="0"
                                   ContentType="Custom"
                                   ImageSource="defaultprofile.jpg"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   HeightRequest="100"
                                   Margin="5"
                                   CornerRadius="50"
                                   WidthRequest="100" />
            <Label Grid.Row="0"
                   Grid.Column="1"
                   HorizontalOptions="Start"
                   Text="Name: First Last" />
            <Label Grid.Row="1"
                   Grid.Column="1"
                   HorizontalOptions="Start"
                   Text="Phone: 000-000-0000" />
            <Label Grid.Row="2"
                   Grid.Column="1"
                   HorizontalOptions="Start"
                   Text="Email: email@domain.com" />

        </Grid>
        <Label BackgroundColor="Grey" HeightRequest="2" />

        <customComp:AppointmentCard>
            
        </customComp:AppointmentCard>
    </VerticalStackLayout>
</ContentPage>